<div class="container">
  <div class="col-md-10 col-md-offset-1">
    <div class="d-flex aligin-items-center">
      <h2 class="p-3 md-10 bg-secondary text-white">ログイン</h2>
    </div>
    <div class="d-flex aligin-items-center">
    <p class="p-2 md-5 bg-light text-secondary">会員の方はこちらからログイン</p>
    </div>
    <%= form_with model: @customer, url: customers_sign_in_path, local: true do |f| %>
    <table class="table table-borderless text-center">
      <tr>
        <th>メールアドレス</th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>

      <tr>
        <th>パスワード</th>
        <td><%= f.password_field :password, autocomplete: "current-password" %></td>
      </tr>

      <div class="actions">
      <tr>
        <th></th>
        <td><%= f.submit "ログイン", class: "btn btn-outline-primary" %></td>
      </tr>
      </div>
    </table>




   <div class="d-flex aligin-items-center">
    <p class="p-2 md-5 bg-light text-secondary">会員登録がお済でない方</p>
   </div>
    <p class="row"><%= link_to "こちら", customers_sign_up_path %>から新規登録をお願いします</p>
  </div>
</div>

<% end %>


