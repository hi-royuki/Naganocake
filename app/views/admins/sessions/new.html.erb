<div class="container">
  <div class="col-md-10 col-md-offset-1">
    <div class="d-flex aligin-items-center">
      <h2 class="p-3 md-10 bg-secondary text-white">管理者ログイン</h2>
    </div>


<%= form_with model: @admin,url:admin_session_path,local:true do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン",class: "btn btn-outline-success"%>
  </div>
  </div>
  </div>
<% end %>


