<div class="container">
  <div class="row">
    <div class="d-flex aligin-items-center">
      <h3 class="p-3 md-10 bg-secondary text-white">注文履歴詳細</h3>
    </div>
  </div>
  <div class="col-xs-7">
    <table class="table-borderless">
      <tr>
        <th>購入者</th>
        <td><%= @order.customer.first_name %><%= @order.customer.last_name %></td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.to_s(:datetime_jp) %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>〒<%= @order.postal_code %><%= @order.address %><br><%= @order.name %></td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
     </table>
     <table class="table table-bordered">
       <thead class="thead-light">
         <tr>
           <th>商品名</th>
           <th>単価(税込)</th>
           <th>数量</th>
           <th>小計</th>
           <!--<th>製作ステータス</th>-->
         </tr>
       </thead>

       <% @order_details.each do |order_detail| %>
       <tbody>
         <tr>
           <td><%= order_detail.item.name %></td>
           <td>¥<%= (order_detail.tax_price / order_detail.amount).to_s(:delimited) %> </td>
           <td><%= order_detail.amount %></td>
           <td>¥<%= order_detail.tax_price.to_s(:delimited) %></td>
         </tr>
         <% end %>
       </tbody>
     </table>

    </div>



</div>
