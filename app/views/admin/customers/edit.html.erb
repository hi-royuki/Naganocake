<div class="container">
  <div class="col-md-10 col-md-offset-1">
    <div class="d-flex aligin-items-center">
      <h3 class="p-3 md-10 bg-secondary text-white"><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h3>
  </div>

  <%= form_with model:@customer, url: admin_customer_path(@customer), local:true do |f| %>
  <div class="form-group row">
    <%= f.label :id,"会員ID" , class:"col-sm-2 col-form-label" %>
    <%= f.text_field :id, class:"form-control col-sm-3" %>
  </div>
   <div class="form-group row">
    <%= f.label :name,"氏名" , class:"col-sm-2 col-form-label" %>
    <%= f.text_field :first_name, class:"form-control col-sm-3 ml-3" %>
    <%= f.text_field :last_name, class:"form-control col-sm-3" %>
  </div>
  <div class="form-group row">
    <%= f.label :name,"フリガナ" , class:"col-sm-2 col-form-label" %>
    <%= f.text_field :first_name_kana, class:"form-control col-sm-3 ml-3" %>
    <%= f.text_field :last_name_kana, class:"form-control col-sm-3" %>
  </div>
  <div class="form-group row">
    <%= f.label :postal_code,"郵便番号" , class:"col-sm-2 col-form-label" %>
    <%= f.text_field :postal_code, class:"form-control col-sm-3" %>
  </div>
  <div class="form-group row">
    <%= f.label :address, "住所", class: "col-sm-2 col-form-label" %>
    <%= f.text_field :address, class: "form-control col-sm-6" %>
  </div>
  <div class="form-group row">
    <%= f.label :telephone_number, "電話番号", class: "col-sm-2 col-form-label" %>
    <%= f.text_field :telephone_number, class: "form-control col-sm-3" %>
  </div>
  <div class="form-group row">
    <%= f.label  "メールアドレス", class: "col-sm-2 col-form-label" %>
    <%= f.text_field :email, class: "form-control col-sm-3" %>
  </div>
  <div class="form-group row">
    <%= f.label "有効ステータス", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= f.label :is_active, '有効' %>
      <%= f.radio_button :is_active, :true %>
      <%= f.label :is_active, '退会' %>
      <%= f.radio_button :is_active, :false %>
    </div>
  </div>
  <div><%= f.submit "変更を保存する", class:"btn btn-primary" %></div>

  <% end %>
</div>