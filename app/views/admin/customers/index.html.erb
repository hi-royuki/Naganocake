<div class="container">
  <div class="col-md-10 col-md-offset-1">
    <div class="d-flex aligin-items-center">
      <h3 class="p-3 md-10 bg-secondary text-white">会員一覧</h3>
    </div>
    <div class="row">
       <table class="table table-hover table-inverse">
          <thead>
            <tr class="table-secondary">
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>会員ステータス</th>
            </tr>
          </thead>
           <tbody>
             <% @customers.each do |customer| %>
             <tr>
               <td><%= customer.id %></td>
               <td><%= link_to customer.first_name + customer.last_name, admin_customer_path(customer) %></td>
      　　    　  <td><%= customer.email %></td>
      　　    　 <td>
      　　    　   <% if customer.is_active %>
                <span class="green">有効</span>
                <% else %>
                <span class="secondary">退会</span>
                <% end %>
              </td>

      　　　  　</tr>
      　　　<% end %>
        </table>
    </div>
  </div>
</div>