<div class="error"><%= flash[:error] %></div>
<div class="container">
  <div class="col-md-10 col-md-offset-1">
    <div class="d-flex aligin-items-center">
      <h3 class="p-3 md-10 bg-secondary text-white">ジャンル一覧・追加</h3>
    </div>
 <div class="row">
  <div class="col-md-11 offset-md-1">
    <div class="row">
      <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
        <p class="d-inline-block">ジャンル名</p>
        <%= f.text_field :name, class: "ml-3" %>
        <%= f.submit'新規登録', class: "btn btn-outline-success" %>
      <% end %>
    </div>
    <div class="row">
      <div class="col-xs-4">
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th></th>
              <th>ジャンル</th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-outline-success" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>
</div>