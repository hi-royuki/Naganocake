<div class="container">
  <div class="col-md-10 col-md-offset-1">
    <div class="d-flex aligin-items-center">
      <h3 class="p-3 md-10 bg-secondary text-white">商品詳細</h3>
    </div>
    <div class="row">
      <div class="col-6">
        <%= attachment_image_tag @item, :image,format: 'jpeg', style: "max-width: 70%" %>
      </div>
      <div class="col-md-10 col-md-offset-1">
        <table class="table table-borderless">
          <tr>
            <th>商品名</th>
            <td class="font-weight-bold"><%= @item.name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td class="font-weight-bold"><%= @item.introduction %></td>
          </tr>

          <tr>
            <th>ジャンル</th>
            <td class="font-weight-bold"><%= @item.genre.name %></td>
          </tr>

          <tr>
            <!--切り捨て(price * tax).floor-->
            <th>税抜き価格 <br>税込価格</th>
            <td class="font-weight-bold"><%= @item.price %>円<br>
            <%= (@item.price* 1.1).floor %>円</td>
          </tr>

          <!--<tr>-->
          <!--  <th>販売ステータス</th>-->
          <!--</tr>-->
          <th></th>
          <td>
            <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-outline-success" %>
          </td>

        </table>
      </div>
    </div>


    </div>
</div>