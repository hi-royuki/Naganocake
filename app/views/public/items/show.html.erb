<div class="container">
  <div class="row">
     <div class="col-md-10">
       <div class="row mt-5">
        <div class="col-md-5">
            <%= attachment_image_tag @item, :image, format: 'jpeg', class: 'bd-placeholder-img card-img-top', fallback: "no_image.jpg" %>
        </div>
        <div class="col-md-7">
          <h1 class="h2"><%= @item.name %></h1>
          <p class="h4 mb-5"><%= @item.introduction %></p>
          <p class="h3">￥<%= (@item.price* 1.1).floor.to_s %>(税込)</p>
        </div>
      </div>
    </div>
  </div>
</div>