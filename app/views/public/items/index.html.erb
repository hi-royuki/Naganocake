<div class="container">
  <div class="col-md-10 col-md-offset-1">
    <div class="d-flex aligin-items-center">
      <h3 class="p-3 md-10 bg-secondary text-white">商品一覧</h3><p>(全<%= @items.count %>件)<p>
    </div>
       <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
        <% @items.each do |item| %>
            <div class="col colmb-3">

              <%= link_to item_path(item) do %><%= attachment_image_tag item, :image, format: 'jpeg', class: "bd-placeholder-img card-img-top", fallback: "no_image.jpg", height: "180" %><% end %>
              <div class="card-body">
                <h5 class="card-title"><%= link_to item.name, item_path(item.id) %></h5>
                <p class="card-text"><%= item.price %>円</p>

              </div>
            </div>
        <% end %>
    </div>
  </div>