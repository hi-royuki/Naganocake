<!--注文履歴一覧-->
<div class="container">
  <div class="row">
    <div class="d-flex aligin-items-center">
      <h3 class="p-3 md-10 bg-secondary text-white">注文履歴一覧</h3>
    </div>
  </div>
  <table class="table table-bordered">
    <thead class="thead-light">
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</br>（送料込み）</th>
        <!--<th>ステータス</th>-->
        <th>注文詳細</th>
      </tr>
    </thead>

       <% @orders.each do |order| %>
    <body>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td>〒<%= order.postal_code %></br><%= order.address %></br><%= order.name %></td>

        <td><% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %>
            <% end %></td>
        <td>￥<%= order.total_payment + 800 %></td>
        <!--<td>ステータス</td>-->
        <td><%= link_to '表示する', order_path(order.id), class: "btn btn-success" %></td>
      <% end %>
      </tr>
    </body>
  </table>

</div>